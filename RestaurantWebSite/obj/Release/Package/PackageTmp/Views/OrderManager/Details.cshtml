@model IEnumerable<RestaurantWebSite.Models.OrderDetail>

@{
    ViewBag.Title = "Details";
}


<h1 align="center">Order #@ViewBag.Order_ID</h1>
<hr style="border:0; height: 1px; background-image:linear-gradient(to right,rgba(0,0,0,0),rgba(0,0,0,0.75), rgba(0,0,0,0))">
<br />


<div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover" width="647">
            <thead style="color:white; background-color:black;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Item.ItemName)
                    </th>
                    <td>
                        @Html.DisplayNameFor(model => model.Item.ItemCategory)
                     
                    </td>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </th>
                    @if (User.IsInRole("Manager"))
                    {
                    <th></th>
                    }
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.ItemCategory)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        @if (User.IsInRole("Manager"))
                        {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }) |
                            @Html.ActionLink("Delete", "DeleteOrderDetail", new { id = item.OrderDetailID })
                        </td>
                        }
                    </tr>
                }

        </table>
    </div>
    </div>

@Html.ActionLink("Back to Order List", "Index", "", new { @class = "btn btn-info btn-sm" })


