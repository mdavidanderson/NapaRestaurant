@model ContactUs.ViewModel.ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}




<h1 align="center">Get In Touch With Us</h1>
<hr style="border:0; height: 1px; background-image:linear-gradient(to right,rgba(0,0,0,0),rgba(0,0,0,0.75), rgba(0,0,0,0))">

<br />
<div class="container">
    <div class="row">
        <br /><br /><br />

        <div class="col-xs-6">
            <div class="well-sm" style="background-color:WindowFrame; width: 50%;">
                <div class="form-group" align="center">


                    @if (ViewBag.Message == null)
                    {
                        <h4 class="form-signin-heading" style="color:white;">Contact Us</h4><hr />
                        <form method="post">

                            <input class="form-control" placeholder="Name" required>
                            <br />
                            <input class="form-control" placeholder="Email" required>
                            <br />
                            <input class="form-control" placeholder="Subject" required>
                            <br />

                            <textarea class="form-control" placeholder="Message" cols="50" rows="5" required></textarea>
                            <br />
                            <div class="text-left">
                                <button class="btn btn-info" type="Submit">Send Email</button>
                            </div>
                        </form>


                    }
                </div>

                <div>
                    <div>
                        @if (ViewBag.Message != null)
                        {
                            <div>@ViewBag.Message</div>


                        }
                    </div>
                </div>


            </div>
        </div>



        <div class="col-xs-6">
            <div class="jumbotron">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <p>

                            We are here to answer any questions you may have about your experience at NAPA.
                            Reach out to us and we'll respond as soon as we can.let us know and we promise
                            we'll do our best to find it for you and send you there.
                        </p>



                        <address>
                            NAPA<br />
                            Chicago, IL 60608<br />
                            <abbr title="Phone">P:</abbr>
                            425.555.0100
                        </address>

                        <address>
                            <strong>Human Resources:</strong>   <a href="mailto:Support@example.com">HR@example.com</a><br />
                            <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a><br />
                            <strong>Special Events:</strong> <a href="mailto:Marketing@example.com">Events@example.com</a>

                        </address>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>









