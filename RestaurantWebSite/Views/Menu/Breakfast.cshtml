@model IEnumerable<RestaurantWebSite.Models.Item>


@helper Truncate(string input, int length)
{

if (input.Length <= length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>.....</text>
}

}

@{
    ViewBag.Title = "Breakfast";
}

<h1 align="center">Breakfast Menu</h1>
<hr style="border:0; height: 1px; background-image:linear-gradient(to right,rgba(0,0,0,0),rgba(0,0,0,0.75), rgba(0,0,0,0))">
<br />


<br />
<div class="container">
    <div class="row-fluid">

        @foreach (var item in Model)
        {
            <div class="col-xs-6 col-sm-3">
              

                <b> @Html.DisplayFor(modelItem => item.ItemName) </b>

                @Html.DisplayFor(modelItem => item.Price)
                <br />
              @Truncate(item.ItemDescription, 80)
                <br /><br />
                @Html.ActionLink("Add to Cart", "AddToCart", "OrderCart", new { id = item.ItemID }, new { @class = "btn btn-default" }) @Html.ActionLink("Details", "BreakfastDetails", new { id = item.ItemID }, new { @class = "btn btn-info" })
                <br /><br /><br />
            </div>
             

        }

    </div>
</div>




